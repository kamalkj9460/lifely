{% assign description = collection.description %}
{% assign title = collection.title %}
{% assign image = collection.featured_image %}



{% if current_tags.first == blank %}
  {% if collection.metafields.bottom_desc.image != blank or collection.metafields.bottom.description != blank or collection.metafields.bottom_desc.heading != blank %}
      <div class="collection_bootom_description" style="background:{{section.settings.color_code}}">
          <div class="page-width">
              <div class="collection_bootom_description_inner">
                  {% if collection.metafields.bottom_desc.image != blank %}
                      <div class="bootom_content_img">
                          <img src="{{ collection.metafields.bottom_desc.image }}" alt=""/>
                      </div>  
                  {% endif %}
                  {% if collection.metafields.bottom.description != blank or collection.metafields.bottom_desc.heading != blank %}
                      <div class="bootom_content_item">
                          {% if collection.metafields.bottom_desc.heading != blank %}
                              <h2> {{ collection.metafields.bottom_desc.heading }}</h2>
                          {% endif %} 
                          <div class="desc-half">{{ collection.metafields.bottom.description | truncatewords: 36, "..."}} <span style="cursor:pointer;" class="read-more-content">[Read More]</span></div>
                          <div class="desc-full" style="display:none;">{{ collection.metafields.bottom.description }} <span style="cursor:pointer;" class="read-less-content">[Read Less]</span></div>
                      </div>  
                  {% endif %}
              </div>  
          </div>  
      </div>  
	{% else %}
      {% if description != blank and title != blank and image != blank %}
         <div class="collection_bootom_description" style="background:{{section.settings.color_code}}">
              <div class="page-width">
                  <div class="collection_bootom_description_inner">
                      {% if image != blank %}
                          <div class="bootom_content_img">
                              <img src="{{ image | img_url: 'large' }}" alt=""/>
                          </div>  
                      {% endif %}
                      {% if description != blank %}
                          <div class="bootom_content_item">
                              {% if title != blank %}
                                  <h2> {{ title }}</h2>
                              {% endif %} 
                              <div class="desc-half">{{ description | truncatewords: 36, "..." }} <span style="cursor:pointer;" class="read-more-content">[Read More]</span></div>
                              <div class="desc-full" style="display:none;">{{ description }} <span style="cursor:pointer;" class="read-less-content">[Read Less]</span></div>
                          </div>  
                      {% endif %}
                  </div>  
              </div>  
          </div> 
    	{% endif %}

  {% endif %}
{% endif %}
<script>
  jQuery(document).ready(function($){
    $('.collection_bootom_description .bootom_content_item .desc-half .read-more-content').on('click', function(){
        $(this).closest('.bootom_content_item').find('.desc-half').hide();
        $(this).closest('.bootom_content_item').find('.desc-full').show();
    })

    $('.collection_bootom_description .bootom_content_item .desc-full .read-less-content').on('click', function(){
        $(this).closest('.bootom_content_item').find('.desc-full').hide();
        $(this).closest('.bootom_content_item').find('.desc-half').show();
    })
  })
</script>
